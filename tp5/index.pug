extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Taks Manager
            .w3-container
                form.w3-container(action='/create_task' method='POST')
                    label
                        b Name
                    input.w3-input.w3-border.w3-light-grey(type='text' name='name')
                    label
                        b Description
                    input.w3-input.w3-border.w3-light-grey(type='text' name='description')
                    label
                        b Deadline
                    input.w3-input.w3-border.w3-light-grey(type='date' name='deadline')
                    input.w3-btn.w3-border.w3-light-grey(type='submit' name='Create')
                    br
                    br
                    lable
                        h5 
                            b Task List
                    table.w3-table-all
                        tr
                            th Name
                            th Description
                            th Deadline
                        each task in task_list
                            tr
                                td= task.name
                                td= task.description
                                td= task.deadline
            footer.w3-container.w3-teal
                address Task Manager App