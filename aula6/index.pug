extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Novo Aluno
            .w3-container
                form.w3-container(action='/' method='POST')
                    label
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='numero')
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    button.w3-button.w3-border.w3-light-grey(type='submit') Enviar
            br
            .w3-card-4
                table.w3-table-all
                    tr
                        th Identificador
                        th Nome
                        th Curso
                        th Operações
                    each aluno in alunos_lista
                        tr
                            td= aluno.numero
                            td= aluno.nome
                            td= aluno.curso
                            td
                                button.w3-button.w3-circle.w3-light-grey(onclick="apagaItem('" + aluno.numero + "')") Apagar
            footer.w3-container.w3-teal
                address Gerado por Gestao de Alunos App