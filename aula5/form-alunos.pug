extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Alunos
            .w3-container
                form.w3-container(action='/aluno' method='POST')
                    label.w3-teal
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label.w3-teal
                        b Numero / Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='numero')
                    label.w3-teal
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    label.w3-teal
                        b Git
                    input.w3-input.w3-border.w3-light-grey(type='text' name='git')
                    input.w3-btn.w3-border.w3-light-grey(type='submit' name='Enviar')
            footer.w3-container.w3-teal
                address Gerado por Gestao de Alunos App
                    a(href='/')  Voltar a pagina principal