extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Taks Manager
            .w3-container
                table.w3-table-all
                    tr
                        th Name
                        th Description
                        th Deadline
                        th Status
                    each taks in task_list
                        tr
                            td= task.name
                            td= task.description
                            td= task.deadline
                            td= task.status
            footer.w3-container.w3-teal